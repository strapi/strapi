{
  "extends": "tsconfig/client.json",
  "compilerOptions": {
    "rootDir": "../",
    "baseUrl": ".",
    "paths": {
      "@tests/*": ["./tests/*"]
    },
    "plugins": [
      {
        "name": "@styled/typescript-styled-plugin",
        "lint": {
          "validProperties": ["container-type"],
          "unknownAtRules": "ignore"
        }
      }
    ]
  },
  "include": ["../package.json", "./src", "../shared", "./tests", "./custom.d.ts", "./module.d.ts"]
}
